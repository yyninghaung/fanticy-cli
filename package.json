{
  "name": "fan-cli",
  "private": true,
  "title": "fan-cli",
  "author": "ningyu",
  "description": "a fanticy cli",
  "repository": "https://github.com/yyninghaung/fanticy-cli.git",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-alloy": "^5.0.0",
    "jest": "^29.5.0",
    "lerna": "^6.6.2",
    "lint-staged": "^13.2.2",
    "prettier": "^3.0.0-alpha.7-for-vscode",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "test": "jest"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --ext .js,.jsx,.ts,.tsx"
    ],
    "**/*.{md,mdx}": [
      "remark"
    ],
    "**/*.{js,ts,md,mdx,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "sideEffects": false,
  "engines": {
    "node": ">=10.0.0"
  }
}
