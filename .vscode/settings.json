{
    // 1. 将 prettier 设置为默认的格式化工具
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    // 2. 设置保存格式化，此处会启用 prettier
    "editor.formatOnSave": true,
    // 3. 设置保存时额外的操作，如 eslint、stylelint fix，import 优化
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true, // 1.31 新增 source.fixAll
      "source.addMissingImports": true, // 1.46 新增，用于启用添加缺失的 import
      "source.organizeImports": false // 1.23 新增，用于启用调整 import 顺序
    },
    "typescript.tsdk": "node_modules/typescript/lib"
  }
  